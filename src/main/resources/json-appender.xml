<?xml version="1.0" encoding="UTF-8"?>
<included>
    <appender name="JSON" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="net.logstash.logback.encoder.LoggingEventCompositeJsonEncoder">
            <providers>
                <mdc/>
                <context/>
                <logLevel/>
                <loggerName/>
                <pattern>
                <pattern>
                    {
                    "serviceName": "aplikasi-tagihan"
                    }
                </pattern>
                </pattern>
                <threadName/>
                <message/>
                <logstashMarkers/>
                <arguments/>
            </providers>
        </encoder>
    </appender>
</included>